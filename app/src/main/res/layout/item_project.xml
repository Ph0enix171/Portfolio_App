<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="#431411"
        android:padding="16dp">

        <TextView
            android:id="@+id/project_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/card_project"
            android:fontFamily="sans-serif-condensed-medium"
            android:shadowColor="#FFFFFF"
            android:textColor="#00FF0D"
            android:textSize="20sp"
            tools:text="1. Project Title" />

        <TextView
            android:id="@+id/project_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/project_title"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/card_project"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#2196F3"
            android:textSize="16sp"
            tools:text="Description of the project. This will inform, in a few lines of course, unlike this text which is going out of hand, ok I'll wrap it up, get it? Wrap? No? Alright." />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_project"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="24dp">

            <ImageView
                android:id="@+id/project_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/world" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>